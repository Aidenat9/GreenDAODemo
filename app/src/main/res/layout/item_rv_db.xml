<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_userId"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="用户id" />

            <TextView
                android:id="@+id/tv_item_userName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="用户名" />

            <TextView
                android:id="@+id/tv_item_sex"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_item_age"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="年龄" />

            <TextView
                android:id="@+id/tv_item_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="薪水" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_noteId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<TextView-->
            <!--android:id="@+id/tv_item_createDate"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

            <!--<TextView-->
            <!--android:id="@+id/tv_item_editDate"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/tv_item_customId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#cccccc" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="match_parent"
        android:background="#dddddd" />

</LinearLayout>
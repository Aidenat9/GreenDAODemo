<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmgg.greendao.ui.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="60dp">

        <Button
            android:id="@+id/btn_main_add"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:text="增" />

        <Button
            android:id="@+id/btn_main_delete"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:text="删" />

        <EditText
            android:id="@+id/et_main_delete"
            android:layout_width="60dp"
            android:layout_height="44dp"
            android:hint="用户id"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_main_update"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:text="改" />

        <Button
            android:id="@+id/btn_main_query"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:text="查" />

        <Button
            android:id="@+id/btn_main_drop"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:text="删all" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_user"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:scrollbarSize="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
